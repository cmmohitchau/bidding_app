generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  email String? @unique
  password String?
  photo String?
  providerId String? @unique
  provider String?
  createdAt DateTime @default(now())
  ItemsSold Item[] @relation("ItemSold")
  ItemBought Item[] @relation("ItemBought")
}

model Item {
  id Int @id @default(autoincrement())
  name String
  price Int
  description String
  SellerId String
  BuyerId String?
  photo String
  seller User @relation("ItemSold" , fields: [SellerId] , references: [id])
  buyer User? @relation("ItemBought" ,fields: [BuyerId] , references: [id])
}
